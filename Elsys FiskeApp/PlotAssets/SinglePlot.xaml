<UserControl x:Class="Elsys_FiskeApp.PlotAssets.SinglePlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Elsys_FiskeApp.PlotAssets"
             xmlns:OxyPlot="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <OxyPlot:PlotView x:Name="CurrentPlottingModuleX" Margin="10" OxyPlot:Model="{Binding CurrentPlotModel}" Height="{Binding PlotHeight, UpdateSourceTrigger=PropertyChanged}" Width="{Binding PlotWidth, UpdateSourceTrigger=PropertyChanged}"
                           />
            
        </StackPanel>
    </Grid>
</UserControl>
